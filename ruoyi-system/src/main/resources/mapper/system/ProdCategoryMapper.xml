<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ProdCategoryMapper">
    
    <resultMap type="ProdCategory" id="ProdCategoryResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="idx"    column="idx"    />
        <result property="status"    column="status"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="creator"    column="creator"    />
        <result property="updator"    column="updator"    />
    </resultMap>

    <sql id="selectProdCategoryVo">
        select id, name, idx, status, update_time, create_time, creator, updator from prod_category
    </sql>

    <select id="selectCategoryAll" resultMap="ProdCategoryResult">
        <include refid="selectProdCategoryVo"/>
    </select>

    <select id="selectProdCategoryList" parameterType="ProdCategory" resultMap="ProdCategoryResult">
        <include refid="selectProdCategoryVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="idx != null "> and idx = #{idx}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="creator != null  and creator != ''"> and creator = #{creator}</if>
            <if test="updator != null  and updator != ''"> and updator = #{updator}</if>
        </where>
    </select>
    
    <select id="selectProdCategoryById" parameterType="Long" resultMap="ProdCategoryResult">
        <include refid="selectProdCategoryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertProdCategory" parameterType="ProdCategory" useGeneratedKeys="true" keyProperty="id">
        insert into prod_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="idx != null">idx,</if>
            <if test="status != null">status,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="creator != null">creator,</if>
            <if test="updator != null">updator,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="idx != null">#{idx},</if>
            <if test="status != null">#{status},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="creator != null">#{creator},</if>
            <if test="updator != null">#{updator},</if>
         </trim>
    </insert>

    <update id="updateProdCategory" parameterType="ProdCategory">
        update prod_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="idx != null">idx = #{idx},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="creator != null">creator = #{creator},</if>
            <if test="updator != null">updator = #{updator},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteProdCategoryById" parameterType="Long">
        delete from prod_category where id = #{id}
    </delete>

    <delete id="deleteProdCategoryByIds" parameterType="String">
        delete from prod_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>