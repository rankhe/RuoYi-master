<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ProductQuotationInfoMapper">

    <resultMap type="ProductQuotationInfo" id="productQuotationInfoResult">
        <id property="id" column="id"/>
        <result property="batchId" column="batch_id"/>
        <result property="date" column="date"/>
        <result property="price" column="price"/>
        <result property="count" column="count"/>
        <result property="nickName" column="nick_name"/>
        <result property="userId" column="user_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

    </resultMap>

    <sql id="selectProductInfoVo">
        select company_name, money, pub_time,investor_name, share,round,update_time,news_title,news_url
		from financing_history
    </sql>

    
    <select id="selectProductInfoList" resultMap="productQuotationInfoResult">
        <include refid="selectProductInfoVo"/>
        <where>
			<if test="companyName != null and companyName != ''">
				AND company_name like concat('%', #{companyName}, '%')
			</if>
			<if test="round != null and round != ''">
				AND round = #{round}
			</if>
		</where>
    </select>

</mapper>